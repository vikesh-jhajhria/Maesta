<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/margin_10"
            app:cardUseCompatPadding="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_product"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp">

                </android.support.v4.view.ViewPager>


                <TextView
android:id="@+id/product_name_txtview"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_24"
                    android:layout_width="match_parent"
                    android:text="Rounded sass'n Class Series for Maestra Itali's Eyewear Section"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/product_model_txtview"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_22"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="Model C14 MF 14303"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/margin_10"
            app:cardUseCompatPadding="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/textview_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.499.00"
                    android:textSize="@dimen/font_22"
                    android:textColor="@color/redButtonColor"
                    android:layout_margin="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/textview_price_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price are inclusive of All Taxes:Rs 499.00 "
                    android:textSize="@dimen/font_22"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginLeft="@dimen/margin_10"
                    />
                <View
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:background="@color/hLineColor"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_10"></View>
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtview_quantity"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textSize="@dimen/font_22"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:textColor="@color/textColorSecondary"
                    android:text="Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                    <EditText
                        android:id="@+id/et_quantity"
                        android:padding="3dp"
                        android:textColor="@color/colorAccent"
                        android:inputType="number"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/square"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtview_quantity"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_40"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/margin_10"
            app:cardUseCompatPadding="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textview_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:textSize="@dimen/font_22"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="@dimen/margin_10"
                    />
                <TextView

                    android:id="@+id/textview_desc_detail"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_height="wrap_content"
                    android:text="Price are inclusive of All Taxes:Rs 499.00 Price are inclusive of All Taxes:Rs 499.00 Price are inclusive of All Taxes:Rs 499.00 Price are inclusive of All Taxes:Rs 499.00Price are inclusive of All Taxes:Rs 499.00Price are inclusive of All Taxes:Rs 499.00Price are inclusive of All Taxes:Rs 499.00Price are inclusive of All Taxes:Rs 499.00Price are inclusive of All Taxes:Rs 499.00 "
                    android:textSize="@dimen/font_22"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginLeft="@dimen/margin_10"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>
