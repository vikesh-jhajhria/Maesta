<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_detail_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_5"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_8"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/margin_1"
    app:cardUseCompatPadding="true">
<TextView
        android:id="@+id/remove_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="-5dp"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_7"
        android:text="x"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/font_30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin">


        <ImageView
            android:src="@drawable/default_image"
            android:id="@+id/img_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/margin_10" />

        <TextView
            android:id="@+id/txtview_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_1"
            android:maxLines="2"
            android:minLines="2"
            android:text="Rounded sass'n Class series of Maseta italia's Eye Wear Section"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/font_18" />

        <LinearLayout
            android:id="@+id/ll_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview_product_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtview_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Quantity"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_18" />

            <EditText
                android:id="@+id/et_quantity_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtview_product_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/square"
                android:inputType="number"
                android:maxLength="5"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text=" "
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/txtview_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ll_quantity"
                android:background="@color/redButtonColor"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_5"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18"
                android:visibility="invisible" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_quantity"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_1"
            android:text="Rs 2000.00"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

