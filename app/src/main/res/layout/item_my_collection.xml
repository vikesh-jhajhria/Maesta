<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/product_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_14"
        android:layout_marginRight="@dimen/margin_14"
        android:layout_marginTop="@dimen/margin_10"
        android:background="#ffffff"
        android:elevation="@dimen/margin_2"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/remove_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-5dp"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_7"
            android:text="x"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/font_30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <ImageView
                android:id="@+id/img_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10" />

            <TextView
                android:id="@+id/txtview_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_1"
                android:text="Rounded sass'n Class series of Maseta italia's Eye Wear Section"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/txtview_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtview_product_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_1"
                android:text="Quantity"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_18" />

            <EditText
                android:id="@+id/et_quantity_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtview_quantity"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txtview_quantity"
                android:background="@drawable/square"
                android:inputType="number"
                android:maxLength="4"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="20"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/txtview_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_quantity_number"
                android:layout_alignTop="@+id/txtview_quantity"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/et_quantity_number"
                android:background="@color/redButtonColor"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtview_quantity"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_1"
                android:text="Rs 2000.00"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>