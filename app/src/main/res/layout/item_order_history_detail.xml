<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/product_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="@dimen/margin_2"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">


            <ImageView
                android:src="@drawable/default_image"
                android:id="@+id/img_item"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10" />

            <TextView
                android:id="@+id/txtview_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:minLines="2"
                android:layout_toRightOf="@+id/img_item"
                android:text="Rounded sass'n Class series of Maseta italia's Eye Wear Section"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_18" />
            <LinearLayout
                android:id="@+id/ll_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/img_item"
                android:layout_below="@+id/txtview_product_name"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/txtview_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:text="Quantity"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/et_quantity_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text=" "
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_18"
                    android:layout_below="@+id/txtview_product_name"
                    android:layout_centerHorizontal="true" />


            </LinearLayout>



            <TextView
                android:id="@+id/txt_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_quantity"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_item"
                android:text="Rs 2000.00"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>